{
    "name": "tlumx/framework",
    "type": "library",
    "description": "Tlumx framework is a fast PHP MVC framework that allows you to create powerful web applications quickly and easily",
    "keywords": ["framework","tlumx","mvc"],
    "homepage": "https://framework.tlumx.xyz",
    "license": "MIT",
    "authors": [
        {
            "name": "Yaroslav Kharitonchuk",
            "email": "yarik.proger@gmail.com",
            "homepage": "https://yarikproger.pp.ua",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0",
        "psr/cache": "^1.0",
        "psr/simple-cache": "^1.0",
        "psr/container": "^1.0",
        "zendframework/zend-diactoros": "^1.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "phpunit/phpunit": "^5.7",
        "cache/integration-tests": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Tlumx\\": "src/"
        }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs"
        ],
        "phpunit": "php vendor/bin/phpunit",
        "phpcs": "php vendor/bin/phpcs"
    }
}
